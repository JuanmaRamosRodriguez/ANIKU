{
    "openapi": "3.0.3",
    "info": {
        "version": "0.0.1",
        "title": "Mi editor de notas API",
        "description": "API RESTFul para notas del editor en la memoria",
        "termsOfService": "http://swagger.io/terms/"
    },
    "servers": [
        {
            "url": "http://localhost:3000/"
        }
    ],
    "paths": {
        "/notas": {
            "get": {
                "tags": [
                    "notas"
                ],
                "summary": "Recoger todas las notas en memoria",
                "description": "Recoger las notas que se han guardado en la memoria",
                "responses": {
                    "200": {
                        "description": "Lista de las notas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Notes"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "notas"
                ],
                "summary": "Crear nota en memoria",
                "description": "Enviar los datos creando una nota para que se guarde",
                "requestBody": {
                    "description": "Creaci√≥n de nota",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PostNotes"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Tu nota ha sido creada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Notes"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/notas/{name}": {
            "put": {
                "tags": [
                    "notas"
                ],
                "summary": "Editar una nota en concreto",
                "description": "Enviar los datos para editar cualquier nota creada para que se guarde",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "Nombre de la nota",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Body para editar la nota",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PutNote"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Tu nota ha sido modificada correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Notes"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "notas"
                ],
                "summary": "Eliminar nota en concreto",
                "description": "Eliminar las notas que quieras",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "Nombre de la nota",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Nota borrada correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/DeleteNote"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Notes": {
                "type": "object",
                "properties": {
                    "results": {
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "data": {
                                    "type": "string",
                                    "format": "int64"
                                }
                            }
                        }
                    }
                }
            },
            "PostNotes": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "data": {
                        "type": "string",
                        "format": "int64"
                    }
                }
            },
            "PutNote": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "data": {
                        "type": "string",
                        "format": "int64"
                    }
                }
            },
            "DeleteNote": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    }
                }
            },
            "examples": {
                "Nota": {
                    "name": "nota",
                    "data": "Tengo una nota dentro de una nota que escribe notas"
                }
            }
        }
    }
}